# Metni konu başlıklarıyla karşılaştırmak için bir fonksiyon
def classify_text(text):
    # Küçük harfe dönüştür ve kelimelere ayır
    words_in_text = text.lower().split()

    # Her konu başlığı için kelime sayısını hesapla
    topic_scores = {topic: 0 for topic in keywords}

    for topic, topic_keywords in keywords.items():
        for keyword in topic_keywords:
            if keyword in words_in_text:
                topic_scores[topic] += 1

    # En yüksek skora sahip olan konuyu bul
    max_score = max(topic_scores.values())

    # Eğer en yüksek skorda bir eşitlik yoksa, bu konuyu döndür
    if max_score > 0:
        most_relevant_topic = [topic for topic, score in topic_scores.items() if score == max_score]
        return most_relevant_topic[0] if len(most_relevant_topic) == 1 else "diğer konular"
    else:
        return "diğer konular"

# Kullanıcıdan metin al
input_text = input("Bir metin girin: ")

# Metni sınıflandır
result = classify_text(input_text)

# Sonucu yazdır
print("Metin en çok şuna aittir:", result)
